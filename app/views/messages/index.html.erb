
<div class="container-fluid inner-padding">
  <div class="animated fadeIn">
		<div class="row">
		  <div class="col-lg-12">
		    <div class="box padding-bottom-15">
		      <div class="box-header">
		        <div class="headline">
		          <h4> Messages </h4>
		          <h5><%= current_user.email %></h5>

		        </div>
		         <div class="box-tools">
		          <div class="input-group input-group-sm">
		            <div class="input-group-btn">
		              <%= link_to "New Message", new_message_path, :class => "btn btn-primary" %>
		             
		            </div>
		          </div>
		        </div>
		      </div>
		      <% if @messages.present? %>
		      	<div class="box-body table-responsive no-padding">
	            <table class="table table-hover">
	              <tr>
	                <th width="10%">SL.No</th>
	                <th width="20%">Reciepent id</th>
	                <th width="20%">Sender id </th>
	                <th width="30%">Message</th>
	                <th width="10%">Action </th>
	               
	              <% @messages.each_with_index do |message,index| %>
	                <tr>
	                  <td><%= index + 1 %></td>
	                  <td><%= User.find(message.recipient_id).email%></td>
	           	      <td><%= User.find(message.sender_id).email%></td>
	                  <td><%= message.body %></td>
	                  <td><%=   link_to "View Message", message_path(message.id), :class => "btn btn-primary"%></td>
	                  
	                </tr>
	              <% end %>
	            </table>
	          </div>
		      <% end %>
		    </div>
		  </div>
		</div>
	</div>
</div>